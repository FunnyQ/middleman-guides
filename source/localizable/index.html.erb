---
layout: layout
---

<header class="hero">
  <aside class="top-nav container">
    <h1 class="logo-text"><a href="/"><%= t("index.logo") %></a></h1>
    <nav class="site-nav">
      <ul>
        <li class="site-nav-item">
          <%= link_to "Contribute", "https://github.com/middleman/middleman",
            target: "_blank" %>
        </li>
        <li class="site-nav-item">
          <%= link_to t("index.docs"),
            "#{locale_prefix}/basics/getting-started/", class: "cta" %>
        </li>
      </ul>
    </nav>
  </aside>
  <div class="hero-content container">
    <div class="hero-content-headline">
      <%= link_to image_tag("logos/middleman-logo.svg"), "#{locale_prefix}/",
        class: "headline-content-logo" %>
      <h2 class="hero-headline"><%= t("index.headline") %></h2>
      <div class="hero-description">
        <h3 class="hero-description-item">
          <%= t("index.description.first") %>
        </h3>
        <h3 class="hero-description-item">
          <%= t("index.description.second")%>
        </h3>
        <h3 class="hero-description-item">
          <%= t("index.description.third")%>
        </h3>
      </div>
    </div>
    <div class="hero-banner-container container">
      <div class="browser">
<pre class="browser-body">
<code>$ gem install middleman</code>
</pre>
      </div>
    </div>
  </div>
</header>

<section role="main">
  <div id="install">
    <div id="search">
      <form>
        <input type="text" id="st-search-input" class="st-search-input" placeholder="Search the documentation" />
      </form>
      <div id="st-results-container"></div>
      <script type="text/javascript">
        var Swiftype = window.Swiftype || {};
        (function() {
          Swiftype.key = 'q3qjGN5LmX2oq6w1V47y';
          Swiftype.inputElement = '#st-search-input';
          Swiftype.resultContainingElement = '#st-results-container';
          Swiftype.attachElement = '#st-search-input';
          Swiftype.renderStyle = "overlay";

          var script = document.createElement('script');
          script.type = 'text/javascript';
          script.async = true;
          script.src = "//swiftype.com/embed.js";
          var entry = document.getElementsByTagName('script')[0];
          entry.parentNode.insertBefore(script, entry);
        }());
      </script>
    </div>
  </div>

<section class="marketing-animation">
  <h1>Marketing animation goes here _____ </h1>
</section>

<section class="community">
  <div class="container">
    <h4 class="community-title">
      <%= t("community.title") %>
    </h4>
    <article class="community-feature-list">
      <div class="community-feature-item">
        <div class="community-feature-icon-wrapper">
        </div>
        <div class="community-feature-text-wrapper">
          <h5 class="community-feature-header">
            <%= t("community.extensions.header") %>
          </h5>
          <p>
            <%= t("community.extensions.description") %>
          </p>
          <p>
            <%= link_to t("community.extensions.link_text"), "/" %>
          </p>
        </div>
      </div>
      <div class="community-feature-item">
        <div class="community-feature-icon-wrapper">
        </div>
        <div class="community-feature-text-wrapper">
          <h5 class="community-feature-header">
            <%= t("community.templates.header") %>
          </h5>
          <p>
            <%= t("community.templates.description") %>
          </p>
          <p>
            <%= link_to t("community.templates.link_text"), "/" %>
          </p>
        </div>
      </div>
      <div class="community-feature-item">
        <div class="community-feature-icon-wrapper">
        </div>
        <div class="community-feature-text-wrapper">
          <h5 class="community-feature-header">
            <%= t("community.forum.header") %>
          </h5>
          <p>
            <%= t("community.forum.description") %>
          </p>
          <p>
            <%= link_to t("community.forum.link_text"), "/" %>
          </p>
        </div>
      </div>
      <div class="community-feature-item">
        <div class="community-feature-icon-wrapper">
        </div>
        <div class="community-feature-text-wrapper">
          <h5 class="community-feature-header">
            <%= t("community.deployment.header") %>
          </h5>
          <p>
            <%= t("community.deployment.description") %>
          </p>
          <p>
            <%= link_to t("community.deployment.link_text"), "/" %>
